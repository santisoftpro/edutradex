# Server Configuration
PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/optigobroker?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis (Optional - for session/caching)
REDIS_URL=redis://localhost:6379

# Deriv API (FREE real market data for Forex)
# Get your free app ID at: https://api.deriv.com/
USE_DERIV_API=true
DERIV_APP_ID=1089
DERIV_WS_URL=wss://ws.derivws.com/websockets/v3?app_id=
FALLBACK_TO_SIMULATION=true

# Finnhub API (FREE real market data for Stocks/Indices)
# Get your free API key at: https://finnhub.io/
# Leave empty to use simulated prices for stocks
FINNHUB_API_KEY=

# Binance WebSocket (FREE real-time crypto prices)
# No API key required - uses public WebSocket streams
# Automatically connects on server startup

# Spread Management
DEFAULT_SPREAD_MARKUP=2
MIN_SPREAD_MARKUP=0.5
MAX_SPREAD_MARKUP=10

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Demo Trading Settings
DEFAULT_DEMO_BALANCE=0
DEFAULT_PAYOUT_PERCENTAGE=80
MIN_TRADE_AMOUNT=1
MAX_TRADE_AMOUNT=1000

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=OptigoBroker
SMTP_FROM_EMAIL=noreply@yourdomain.com
EMAIL_VERIFICATION_ENABLED=true
