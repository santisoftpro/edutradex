# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env on your VPS and fill in the values

# Server
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
DATABASE_URL="postgresql://edutradex:YOUR_SECURE_PASSWORD@localhost:5432/edutradex?schema=public"

# JWT Secret (Generate a strong random string - at least 64 characters)
# You can generate one with: openssl rand -base64 64
JWT_SECRET=GENERATE_A_STRONG_64_CHARACTER_SECRET_KEY_HERE
JWT_EXPIRES_IN=7d

# Client URL (Your frontend domain)
CLIENT_URL=https://yourdomain.com

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="OptigoBroker <noreply@yourdomain.com>"

# Redis (Optional but recommended)
REDIS_URL=redis://localhost:6379

# Trading Configuration
MIN_TRADE_AMOUNT=1
MAX_TRADE_AMOUNT=10000
DEFAULT_PAYOUT_PERCENTAGE=85
DEFAULT_DEMO_BALANCE=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
