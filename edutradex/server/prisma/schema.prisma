  netFinancingCash    Float @default(0)

  // Net Position
  openingBalance Float @default(0)
  closingBalance Float @default(0)
  netCashChange  Float @default(0)

  generatedAt DateTime @default(now())

  @@unique([month, year])
  @@index([year, month])
}

// Expense categories
model ExpenseCategory {
  id           String            @id @default(uuid())
  name         String
  code         String            @unique
  parentId     String?
  parent       ExpenseCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children     ExpenseCategory[] @relation("CategoryHierarchy")
  description  String?
  isActive     Boolean           @default(true)
  displayOrder Int               @default(0)

  expenses ExpenseEntry[]
  budgets  ExpenseBudget[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
  @@index([isActive])
  @@index([displayOrder])
}

// Expense entries
model ExpenseEntry {
  id         String          @id @default(uuid())
  categoryId String
  category   ExpenseCategory @relation(fields: [categoryId], references: [id])
  date       DateTime        @db.Date

  amount          Float
  description     String?
  vendor          String?
  isRecurring     Boolean @default(false)
  recurringPeriod String? // MONTHLY, QUARTERLY, ANNUALLY

  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([categoryId])
  @@index([isRecurring])
}

// Expense budgets
model ExpenseBudget {
  id         String          @id @default(uuid())
  categoryId String
  category   ExpenseCategory @relation(fields: [categoryId], references: [id])
  month      Int
  year       Int

  budgetAmount    Float @default(0)
  actualAmount    Float @default(0)
  variance        Float @default(0)
  variancePercent Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([categoryId, month, year])
  @@index([year, month])
}
